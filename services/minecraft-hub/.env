# Hub owns the single upstream session
HUB_SINGLE_TARGET=true
HUB_VERSION=1.21.8
HUB_MOTD=AIRI Minecraft Hub

# Viewer listener (online-mode recommended for skins)
HUB_VIEWER_LISTEN_HOST=0.0.0.0
HUB_VIEWER_LISTEN_PORT=25566
HUB_VIEWER_ONLINE_MODE=true
HUB_VIEWER_USERNAME=airi-bot

# Bot listener (offline)
HUB_BOT_LISTEN_HOST=0.0.0.0
HUB_BOT_LISTEN_PORT=25567
HUB_BOT_ONLINE_MODE=false
HUB_BOT_USERNAME=airi-bot-mineflayer

# Target server (real Minecraft server)
HUB_UPSTREAM_HOST=localhost
HUB_UPSTREAM_PORT=25565
HUB_UPSTREAM_AUTH=microsoft
HUB_UPSTREAM_USERNAME=airi-bot

HUB_REWRITE_IDENTITY=false
HUB_DEBUG_PACKETS=false
HUB_DUMP_PACKETS=true
HUB_DUMP_DIR=./packet-dumps

# Mirroring and input filters
HUB_MIRROR_MOVEMENT=true
HUB_MIRROR_ACTIONS=false
HUB_BLOCK_VIEWER_MOVEMENT=true
HUB_BLOCK_VIEWER_ACTIONS=true
