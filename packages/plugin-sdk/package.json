  "files": [
    "README.md",
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "pnpm run build",
    "build": "tsdown",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@moeru/eventa": "catalog:",
    "@proj-airi/plugin-protocol": "workspace:*",
    "@proj-airi/server-shared": "workspace:*",
