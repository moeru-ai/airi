{
  "extends": [
    "@electron-toolkit/tsconfig/tsconfig.web.json",
    "../../tsconfig.json"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@proj-airi/stage-ui/*": [
        "../stage-ui/src/*"
      ]
    }
  },
  "include": [
    "src/renderer/src/shims.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts"
  ]
}
