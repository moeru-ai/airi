{
  "name": "@proj-airi/audio",
  "type": "module",
  "private": true,
  "description": "Audio processing utilities for Project AIRI",
  "author": {
    "name": "Moeru AI Project AIRI Team",
    "email": "airi@moeru.ai",
    "url": "https://github.com/moeru-ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
